[Unit]
Description=wow-gurt
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=bash -c 'cd /home/wow-gurt/wow-gurt/render && make prod-start'
ExecStop=bash -c 'cd /home/wow-gurt/wow-gurt/render && make prod-stop'

[Install]
WantedBy=multi-user.target
